---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
    <img
        class="image"
        src={frontmatter.image.url}
        width="300"
        alt={frontmatter.image.alt}
    />
    <h1 class="middle">{frontmatter.title}</h1>
    <p class="middle">{frontmatter.description}</p>
    <p class="middle">{frontmatter.pubDate.toString().slice(0, 10)}</p>
    <p class="middle">
        <a href="/portfolio"><span>&#10508;</span> back to all projects</a>
    </p>

    <slot />
</BaseLayout>
