---
import Navigation from "../components/Navigation.astro";
import CentralSection from "../components/CentralSection.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const isHomePage = Astro.url.pathname === "/";
const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <link rel="stylesheet" href="https://use.typekit.net/abs7epc.css" />
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body>
        <!-- The next line is a skip-to-content link for keyboard users. Do not remove it! -->
        <a href="#content" id="skip-to-content-link">Skip to content</a>

        <div class="layout">
            <!-- =============================================== -->
            <!-- HEADER -->
            <!-- =============================================== -->

            <Navigation />

            <!-- =============================================== -->
            <!-- LEFT SIDEBAR -->
            <!-- =============================================== -->

            <CentralSection pageTitle={pageTitle} isHomePage={isHomePage}>
                <slot />
            </CentralSection>

            <!-- =============================================== -->
            <!-- FOOTER -->
            <!-- =============================================== -->

            <Footer />

            <!-- Closing .layout: -->
        </div>

        <!-- Add any additional Javascript code (<script></script>) here. -->
    </body>
</html>
