---
import ThemeIcon from "../components/ThemeIcon.astro";
---

<header>
    <div>
        <ThemeIcon />
    </div>
    <div class="header-content">
        <div class="header-image">
            <a href="https://www.evdokimovas.com">
                <img
                    id="profileImg"
                    src="/assets/SofyaEvdokimova.png"
                    alt="Sofya Evdokimova"
                />
            </a>
            <script>
                const profileImg = document.getElementById(
                    "profileImg",
                ) as HTMLImageElement;

                function updateProfileImage() {
                    const isDark =
                        document.documentElement.classList.contains("dark");
                    if (profileImg) {
                        profileImg.src = isDark
                            ? "/assets/SofyaEvdokimovaDark.png"
                            : "/assets/SofyaEvdokimova.png";
                    }
                }

                // Run on page load
                updateProfileImage();
            </script>

            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About Me</a></li>
                    <li><a href="/portfolio">Portfolio</a></li>
                    <li>
                        <a href="https://evdokimovas.substack.com/">Writing</a>
                    </li>
                    <details>
                        <summary><strong>Personal</strong></summary>
                        <ul>
                            <li>
                                <a
                                    href="https://evdokimovas.micro.blog/categories/film-log/"
                                    >Media Log</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://evdokimovas.micro.blog/categories/gardening/"
                                    >Gardening diary</a
                                >
                            </li>
                            <li>
                                <a href="/webmastery">Indie Web/Webmastery</a>
                            </li>
                            <li>
                                <a
                                    href="https://evdokimovas.micro.blog/feed.json"
                                    >RSS &nbsp;<svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="16"
                                        height="16"
                                        fill="currentColor"
                                        class="bi bi-rss"
                                        viewBox="0 0 16 16"
                                    >
                                        <path
                                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
